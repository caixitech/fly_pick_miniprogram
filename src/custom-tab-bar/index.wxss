.tab_container{
    width: 100%;
    height:110rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
	border-top: solid 1rpx rgba(0,0,0,.1);
}
.tab_item{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
}
.tab_img{
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 8rpx;
}
.tab_name{
    font-size: 20rpx;
    color:#8C8C8C;
}
.tab_item.active .tab_name{
    color:#056BF1;
}